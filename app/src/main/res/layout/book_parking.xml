<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_date"
        android:layout_marginTop="82dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT ENTRY DATE"
        android:id="@+id/btn_date"
        android:layout_alignBottom="@+id/in_date"
        android:layout_toRightOf="@+id/in_date"
        android:layout_toEndOf="@+id/in_date" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/out_date"
        android:layout_below="@+id/in_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT exit date"
        android:id="@+id/btn_date_out"
        android:layout_below="@+id/btn_date"
        android:layout_alignLeft="@+id/btn_date"
        android:layout_alignStart="@+id/btn_date" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_time"
        android:layout_below="@+id/out_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT ENTRY TIME"
        android:id="@+id/btn_time"
        android:layout_below="@+id/btn_date_out"
        android:layout_alignLeft="@+id/btn_date_out"
        android:layout_alignStart="@+id/btn_date_out" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/out_time"
        android:layout_below="@+id/in_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT EXIT TIME"
        android:id="@+id/btn_time_out"
        android:layout_below="@+id/btn_time"
        android:layout_alignLeft="@+id/btn_time"
        android:layout_alignStart="@+id/btn_time" />

    <TextView
        android:id="@+id/booking_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_time_out"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="43dp"
        android:layout_toStartOf="@+id/btn_time_out"
        android:text="COST" />

    <TextView
        android:id="@+id/charges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/booking_cost"
        android:layout_alignBottom="@+id/booking_cost"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/booking_cost"
        android:text="20" />

    <Button
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/charges"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="18dp"
        android:text="BOOK" />


</RelativeLayout>